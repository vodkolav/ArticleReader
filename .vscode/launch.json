    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: batch TTS",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Spark/TTS.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--mode", "batch", 
            "--input", "data/arXiv-2106.04624v1/main.tex", 
            "--output-type", "fs",
            "--output-type", "csv",
            "--output", "output/"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: streaming TTS",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Spark/TTS.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--mode", "stream", 
            "--kafka-topic", "articles", 
            "--kafka-servers", "localhost:9092",
            "--output-type", "fs",
            "--output-type", "parquet",
            "--output", "output/"],
            "cwd": "${workspaceFolder}"
        }
    ]
}